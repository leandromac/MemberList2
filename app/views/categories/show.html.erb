<% if user_signed_in? %>

<p id="notice"><%= notice %></p>

<div class="jumbotron text-center">

<p>
  <h1><strong><%= @category.title %></strong></h1>
  <p class="lead"><%= @category.description %></p>
</p>
</div>
<%= link_to '< Back', categories_path %> |
<%= link_to 'Edit', edit_category_path(@category) %>
